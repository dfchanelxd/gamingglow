# ============================================
# GAMINGGLOW - Environment Configuration
# ============================================

# Application
NEXT_PUBLIC_APP_NAME="GAMINGGLOW"
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/gamingglow
# Or Supabase
# DATABASE_URL=postgresql://postgres.[project]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres

# Redis (for sessions & rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_TOKEN=

# AWS S3 / MinIO Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET_NAME=gamingglow-files
S3_ENDPOINT=https://s3.amazonaws.com
# For MinIO:
# S3_ENDPOINT=http://localhost:9000
# S3_FORCE_PATH_STYLE=true

# CloudFront / CDN
CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net
CLOUDFRONT_KEY_PAIR_ID=your_key_pair_id
CLOUDFRONT_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----\n...

# Authentication
JWT_SECRET=your_super_secret_jwt_key_min_32_chars_long
JWT_REFRESH_SECRET=your_refresh_secret_key_min_32_chars
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Admin Credentials (Staging Only - CHANGE IN PRODUCTION!)
ADMIN_EMAIL=admin@gamingglow.local
ADMIN_PASSWORD=Admin123!Staging

# 2FA (TOTP)
TOTP_ISSUER=GAMINGGLOW

# hCaptcha / Turnstile
NEXT_PUBLIC_HCAPTCHA_SITE_KEY=your_hcaptcha_site_key
HCAPTCHA_SECRET=your_hcaptcha_secret
# Or Cloudflare Turnstile:
# NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_turnstile_site_key
# TURNSTILE_SECRET=your_turnstile_secret

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@gamingglow.local

# Sentry (Error Tracking)
SENTRY_DSN=https://your_sentry_dsn
SENTRY_ENVIRONMENT=development

# ClamAV (Virus Scanning)
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900

# File Upload
MAX_FILE_SIZE=10737418240
MAX_UPLOAD_SIZE=5368709120
ALLOWED_FILE_TYPES=zip,exe,msi,dmg,pkg

# Legal
DMCA_EMAIL=dmca@gamingglow.local
SUPPORT_EMAIL=support@gamingglow.local

# Feature Flags
ENABLE_2FA=true
ENABLE_CAPTCHA=true
ENABLE_VIRUS_SCAN=true
ENABLE_EMAIL_NOTIFICATIONS=false
